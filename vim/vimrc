" File managed by Sgoettschkes/dotfiles
" Do not change

" Use Vim settings, rather then Vi settings (much better!).
" This must be first, because it changes other options as a side effect.
set nocompatible

runtime bundle/vim-pathogen/autoload/pathogen.vim
execute pathogen#infect()

filetype plugin on

syntax enable

" Use solarized
let g:solarized_termcolors=256
se t_Co=16
set background=dark
colorscheme solarized

" Tabs
set number
set tabstop=4 shiftwidth=4 expandtab 

" Prevent cheating
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>
noremap <Up> <Nop>
noremap <Down> <Nop>
noremap <Left> <Nop>
noremap <Right> <Nop>

" Use normal bash tab completion for files
set wildmode=longest,list

" Settings for vimwiki
let g:vimwiki_list = [{'path':'$HOME/workspace/Sgoettschkes/wiki/', 'path_html':'$HOME/workspace/Sgoettschkes/wiki/html/', 'template_path':'$HOME/workspace/Sgoettschkes/wiki/templates/', 'template_default':'def_template', 'template_ext':'.html'}]
