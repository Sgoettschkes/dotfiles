# File managed by Sgoettschkes/dotfiles
# Do not change

# Dir navigation
alias u='cd .. && ll'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias ~='cd ~'

# Misc

# Shortcuts
alias a=ansible
alias ag=ansible-galaxy
alias ap=ansible-playbook
alias g=git
alias gg='git grep'
alias va=vagrant

# Some ls aliases
alias l='ls -CF'
alias la='ls -A'
alias lg='ls -alF | grep'
alias ll='ls -alF'

# Little helpers
alias chgrp='chgrp --preserve-root'
alias chmod='chmod --preserve-root'
alias chown='chown --preserve-root'
alias cl='clear && pwd && ls -AFG'
alias clc=clear
alias mkdir='mkdir -p'
alias rm='rm --preserve-root'
alias root=su
alias su='sudo -i'

# Advanced system tools
alias df='df -Tha --total'
alias du='du -ach | sort -h'
alias free='free -mt'
alias psx='ps aux | grep'
alias watchlog='watch -n 2 tail -n 15'

# flux
alias flux='xflux -l 48.20 -g 16.36'

# tmux
alias tmux='tmux -2'

# Rest API stuff
alias myip='curl http://ipecho.net/plain; echo'
