# File managed by Sgoettschkes/dotfiles
# Do not change

# Dir navigation
alias u='cd .. && ll'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias ~='cd ~'

# Misc
alias cl='clear && pwd && ls -AFG'

# Shortcuts
alias g=git
alias gg='git grep'
alias gh=gitHelper
alias v=vim
alias va=vagrant

# Some ls aliases
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'

# Little helpers
alias mkdir='mkdir -p'
alias rm='rm -I --preserve-root'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
alias su='sudo -i'
alias root=su

# Advanced system tools
alias df='df -Tha --total'
alias du='du -ach | sort -h'
alias free='free -mt'
alias psx='ps aux | grep'

# tmux
alias tmux='tmux -2'

# vagrant
alias vadu='vagrant destroy --force && vagrant up'
alias vag='vagrant global-status'
alias vah='vagrant halt'
alias vap='vagrant provision'
alias var='vagrant reload'
alias vas='vagrant ssh'
alias vau='vagrant up'

# Rest API stuff
alias myip='curl http://ipecho.net/plain; echo'
