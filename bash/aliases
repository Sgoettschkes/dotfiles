# File managed by Sgoettschkes/dotfiles
# Do not change

# Dir navigation
alias u='cd .. && ll'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias ~='cd ~'

# Misc
alias cl='clear && pwd && ls -AFG'

# Shortcuts
alias g=git
alias gh=gitHelper
alias v=vim
alias va=vagrant

# Some ls aliases
alias l='ls -CF'
alias la='ls -A'
alias ll='ls -alF'
alias lsl='ls -lhFA | less'

# Little helpers
alias mkdir='mkdir -p'
alias rm='rm -I --preserve-root'
alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'
alias su='sudo -i'
alias root=su

# Advanced system tools
alias df='df -Tha --total'
alias du='du -ach | sort -h'
alias free='free -mt'
alias psx='ps aux | grep $1'

# tmux
alias tmux2='tmux -2'

# vagrant
alias vag='vagrant global-status'

# Rest API stuff
alias myip='curl http://ipecho.net/plain; echo'
