# File managed by Sgoettschkes/dotfiles
# Do not change

# Dir navigation
alias u='cd .. && ll'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../..'
alias .4='cd ../../../..'
alias ~='cd ~'

# Some ls aliases
alias l='ls -CF'
alias la='ls -A'
alias lg='ls -alF | grep'
alias ll='ls -alF'

# Shortcuts
alias a=ansible
alias ag=ansible-galaxy
alias ap=ansible-playbook
alias g=git
alias gg='git grep'
alias v=vim
alias va=vagrant

# Little helpers
alias cl=clear
alias cle='clear && pwd && ls -AFG'
alias fle="perl -pi -e 's/\r/\n/g' "
alias fuck='sudo $(history -p \!\!)'
alias mkdir='mkdir -p'
alias su='sudo -i'

# Advanced system tools
alias df='df -Tha --total'
alias du='du -ach | sort -h'
alias free='free -mt'
alias psx='ps aux | grep'
alias lef='less +F'

# Tools
alias flux='xflux -l 48.20 -g 16.36'
alias tmux='tmux -2'

# Rest API stuff
alias myip='curl http://ipecho.net/plain; echo'

# git shortcuts
alias glt='git l `git describe --tags --abbrev=0`..HEAD'
