# File managed by Sgoettschkes/dotfiles
# Do not change

# vim: set filetype=sh :

cdl() {
    cd -- "$@" && ls
}; export -f cdl

mkcd() {
    mkdir -p -- "$@" && cd "$@"
}; export -f mkcd

lsx() {
    ls -alF $1 | grep $2
}; export -f lsx

ssht() {
    ssh $* -t 'tmux a || tmux || /bin/bash'
}; export -f ssht
