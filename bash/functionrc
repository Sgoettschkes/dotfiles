# File managed by Sgoettschkes/dotfiles
# Do not change

# vim: set filetype=sh :

cdl() {
    cd -- "$@" && ls
}; export -f cdl

finder() {
    if [ "$#" -ne 1 ]; then
        echo "Usage: finder show|hide"
        exit 1
    fi
    if [ $1 == "show" ]; then
        defaults write com.apple.Finder AppleShowAllFiles YES
    elif [ $1 == "hide" ]; then
        defaults write com.apple.Finder AppleShowAllFiles NO
    else
        echo "Usage: finder show|hide"
        exit 1
    fi
    killall Finder
}; export -f finder

lsx() {
    ls -alF $1 | grep $2
}; export -f lsx

mkcd() {
    mkdir -p -- "$@" && cd "$@"
}; export -f mkcd

ssht() {
    ssh $* -t 'tmux a || tmux || /bin/bash'
}; export -f ssht
