# File managed by Sgoettschkes/dotfiles
# Do not change

[alias]
    amend = commit --all --amend
    br = branch --all --color -vv
    ci = commit
    cm = !git add -A && git commit -m
    co = checkout
    cob = checkout -b
    diff = diff --word-diff
    down = !git pull --rebase --prune $@ && git submodule update --init --recursive
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate
    ld = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --date=relative
    ldd = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate
    lg = log --all --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'\n--abbrev-commit --date=relative
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat
    re = reset HEAD
    save = !git add -A && git commit -m 'SAVEPOINT'
    st = status -s
    undo = reset HEAD~1 --mixed
    up = push origin master

[branch]
	autosetuprebase = always

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore

[merge]
	conflictstyle = diff3

[push]
    default = upstream

[user]
    name = Sebastian GÃ¶ttschkes
    email = sebastian.goettschkes@googlemail.com
