# File managed by Sgoettschkes/dotfiles
# Do not change

[alias]
    amend = commit --all --amend
    br = branch
    bra = branch --all --color -vv
    ci = commit
    co = checkout
    cob = checkout -b
    diw = diff --word-diff
    dic = diff --color-words
    dicc = diff --color-words=.
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat
    llm = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat --max-count=10
    lm = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --max-count=25
    re = reset HEAD
    st = status --short
    undo = reset HEAD~1 --mixed

[branch]
	autosetuprebase = always

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    algorithm = patience

[help]
    autocorrect = 1

[merge]
	conflictstyle = diff3

[push]
    default = upstream

[rebase]
    autosquash = true

[user]
    email = sebastian.goettschkes@googlemail.com
    name = Sebastian GÃ¶ttschkes
