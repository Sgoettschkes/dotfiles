# File managed by Sgoettschkes/dotfiles
# Do not change

[alias]
    a = add
    amend = commit --all --amend
    br = branch
    bra = branch --all --color -vv
    ci = commit
    cin = commit --no-verify
    co = checkout
    cob = checkout -b
    d = diff
    diw = diff --word-diff
    dic = diff --color-words
    dicc = diff --color-words=.
    diffl = diff HEAD^1..HEAD
    dt=difftool
    f = fetch --all
    fa = fetch --all --prune --tags --verbose
    l = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat
    llm = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --numstat --max-count=10
    lm = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cgreen\\ [%cn]" --decorate --max-count=20
    pu = push
    pun = push --no-verify
    re = reset HEAD
    st = status --short
    stu = status --short --untracked-files
    undo = reset HEAD~1 --mixed

[branch]
	autosetuprebase = always

[color]
    diff = auto
    status = auto
    branch = auto
    ui = auto

[core]
    autocrlf = input
    editor = vim
    excludesfile = ~/.gitignore

[diff]
    algorithm = patience
    tool = diffmerge

[help]
    autocorrect = 10

[merge]
    conflictstyle = diff3
    tool = diffmerge

[push]
    default = current

[rebase]
    autosquash = true

[rerere]
    enabled = true

[user]
    email = sebastian.goettschkes@googlemail.com
    name = Sebastian GÃ¶ttschkes

[difftool]
    prompt = false

[difftool "diffmerge"]
	cmd = "diffmerge \"$LOCAL\" \"$REMOTE\""

[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$(if test -f \"$BASE\"; then echo \"$BASE\"; else echo \"$LOCAL\"; fi)\" \"$REMOTE\""
	trustExitCode = true
