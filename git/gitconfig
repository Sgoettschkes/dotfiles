# File managed by Sgoettschkes/dotfiles
# Do not change

[alias]
    a = add
    aa = add .
    amend = commit --all --amend
    br = branch
    ci = commit
    cim = commit --message
    cinvm = commit --no-verify --message
    co = checkout
    cob = checkout -b
    d = diff
    l = log --pretty=format:"%ar\\ %C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%an]" --decorate
    ll = log --pretty=format:"%ar\\ %C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%an]" --decorate --numstat
    me = merge
    met = mergetool
    pa = pull --all --prune --tags --verbose
    pu = push -u origin
    punv = push -u origin --no-verify
    re = reset HEAD
    s = stash
    st = status --short
    undo = reset HEAD~1 --mixed

[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[core]
    autocrlf = input
    compactionHeuristic = true
    editor = vim
    excludesfile = ~/.gitignore

[credential]
    helper = osxkeychain

[diff]
    algorithm = patience

[difftool]
    prompt = false

[fetch]
    fsckobjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

[help]
    autocorrect = 10

[init]
	defaultBranch = main

[merge]
    tool = meld

[pull]
    rebase = true

[push]
    default = current

[rebase]
    autosquash = true

[receive]
    fsckObjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

[rerere]
    enabled = true

[transfer]
    fsckobjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

