# File managed by Sgoettschkes/dotfiles
# Do not change

[alias]
    ad = add
    ada = add .
    amend = commit --all --amend
    br = branch
    ci = commit
    cim = commit --message
    cinvm = commit --no-verify --message
    co = checkout
    cob = checkout -b
    di = diff
    ll = log --pretty=format:"%ar\\ %C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ [%an]" --decorate
    me = merge
    met = mergetool
    pa = pull --all --prune --tags --verbose
    pu = push -u origin
    punv = push -u origin --no-verify
    re = reset HEAD
    st = status --short
    stu = status -u
    undo = reset HEAD~1 --mixed

[branch]
    autosetuprebase = always

[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto

[core]
    autocrlf = input
    compactionHeuristic = true
    editor = nvim
    excludesfile = ~/.gitignore

[credential]
    helper = osxkeychain

[diff]
    algorithm = patience

[difftool]
    prompt = false

[fetch]
    fsckobjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

[help]
    autocorrect = 10

[init]
	defaultBranch = main

[merge]
    conflictstyle = diff3
    tool = nvim

[mergetool]
	keepBackup = false
	prompt = false

[mergetool "nvim"]
	cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""

[pull]
    rebase = true

[push]
    default = current

[rebase]
    autosquash = true

[receive]
    fsckObjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

[rerere]
    enabled = true

[transfer]
    fsckobjects = true # see https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0

