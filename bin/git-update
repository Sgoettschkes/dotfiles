#!/bin/bash

# File managed by Sgoettschkes/dotfiles
# Do not change

set -o nounset
set -o errexit

readonly Progname=$(basename "$0")
readonly Progdir="$( cd "$( dirname "$( dirname "$0" )" )" && pwd )"
readonly Args="$@"

main () {
    local readonly GitTargetRemote=${1:-origin}

    local readonly GitBaseDir=`git rev-parse --show-toplevel`
    local readonly CurrentDir=`pwd`

    cd $GitBaseDir
    git checkout master
    git fetch --all --prune --tags
    git merge --ff-only ${GitTargetRemote}/master
    git checkout @{-1}
    cd $CurrentDir
}
main $Args
